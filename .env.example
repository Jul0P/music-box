# GitHub
GH_TOKEN=ghp_your_GH_TOKEN_here
GIST_ID=your_gist_id_here

# Provider configuration
PROVIDER=spotify
MODE=top_tracks
LIMIT=10
PERIOD=4w
DISPLAY_MODE=title_artist

# Spotify credentials (get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# Last.fm credentials (for Qobuz, Apple Music, Amazon Music, Deezer, YouTube Music, Tidal)
# Get from https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key
LASTFM_USER=your_lastfm_username